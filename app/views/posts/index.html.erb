

<%=  render "sub_nav" %>

  <div class="paginate"> <%= will_paginate @posts %></div>


  <div class="content" data-slug="panel1">


    <% @posts.each do |post| %>
        <div class="row">
          <div class="large-12 columns info_bloc">

              <div class="large-12 columns title"><%= post.title %></div>


              <div class="small-3 columns">
                <a class="th radius">
                  <%= image_tag post.image_url(:small) if post.image? %>
                </a>

              </div>
              <div class="small-9 columns">

                  <div class="large-12 columns"><%= post.updated_at.strftime("%y-%m-%d") %> / <%= link_to post.category, posts_path(:rend => post.category)%></div>

                  <div class="large-12 columns"><%= truncate(post.description, :length => 135) %></div>

                  <div class="large-12 columns">
                    <%= link_to 'Подробнее »', post %>
                    <%= link_to 'Изменить', edit_post_path(post) if current_user%>
                    <%= link_to 'Удалить', post, method: :delete, data: { confirm: 'Are you sure?' } if current_user%>
                  </div>

              </div>

          </div>
        </div>
        <div class="large-12 columns title line"></div>
    <% end %>
    <div><%= link_to 'New Post', new_post_path if current_user%></div>
  </div>

