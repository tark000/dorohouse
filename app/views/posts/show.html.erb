<%=  render "sub_nav" %>

<a href=<%= post_path(@previous) %>  ><span>Предыдущая</span></a>
<a href=<%= post_path(@next) %>  ><span>Следующая</span></a>

<div class="row">
  <div class="small-12 columns">
    <div class="small-5 columns">

        <%= image_tag @post.image_url(:big), :class=>"th radius" if @post.image? %>

    </div>
    <div class="small-7 columns">

        <div class="large-12 columns title"><%= @post.title %></div>

        <div class="large-12 columns"><%= @post.updated_at.strftime("%y-%m-%d") %> / <%= link_to @post.category, posts_path(:rend => @post.category)%></div>

        <div class="large-12 columns">
          <ul class="small-block-grid-2">
            <% @post.post_images.each do |image| %>
                <li>
                  <%= image_tag image.image_url(:small) if image.image? %>
                </li>
            <% end %>
          </ul>

        </div>

    </div>



    <div class="small-12 columns">

      <%= @post.description %>


    </div>
  </div>

</div>


<%= link_to 'Edit', edit_post_path(@post) if current_user %>


