<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </div>
    <div class="field">
      <%= f.label :category %><br />
      <%= f.select :category, ["Infrastructure Kiev","Real estate in Kiev","Building Law"] %>
    </div>
  <div class="actions">
    <%= f.submit %>
  </div>

    <div class="field">
      <%= f.fields_for :post_images do |builder| %>
          <%= render 'post_image_fields', f: builder %>
      <% end %>
      <%= link_to_add_fields "Add PostImage", f, :post_images %>
    </div>

<% end %>
