<%= form_for @advert do |f| %>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :city_id %><br />
      <%= f.collection_select :city_id, City.order(:title), :id, :title, include_blank: true %>
    </div>

    <div class="actions"><%= f.submit "Search" %></div>
<% end %>