<h1>Listing adverts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Price</th>
    <th>Type</th>
    <th>Region</th>
    <th>City</th>
    <th>Area</th>
    <th>Street</th>
    <th>House</th>
    <th>City district</th>
    <th>Room number</th>
    <th>House type</th>
    <th>Floor</th>
    <th>Height</th>
    <th>State</th>
    <th>Description</th>
    <th>Image</th>
    <th>Layout</th>
    <th>Video</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @adverts.each do |advert| %>
  <tr>
    <td><%= advert.title %></td>
    <td><%= advert.price %></td>
    <td><%= advert.type_id %></td>
    <td><%= advert.region_id %></td>
    <td><%= advert.city_id %></td>
    <td><%= advert.area %></td>
    <td><%= advert.street_id %></td>
    <td><%= advert.house %></td>
    <td><%= advert.city_district_id %></td>
    <td><%= advert.room_number %></td>
    <td><%= advert.house_type_id %></td>
    <td><%= advert.floor %></td>
    <td><%= advert.height %></td>
    <td><%= advert.state_id %></td>
    <td><%= advert.description %></td>
    <td><%= advert.image %></td>
    <td><%= advert.layout %></td>
    <td><%= advert.video %></td>
    <td><%= advert.user_id %></td>
    <td><%= link_to 'Show', advert %></td>
    <td><%= link_to 'Edit', edit_advert_path(advert) %></td>
    <td><%= link_to 'Destroy', advert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

